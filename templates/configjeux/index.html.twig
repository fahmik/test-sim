{% extends 'base.html.twig' %}

{% block title %}Configjeux index{% endblock %}

{% block body %}
    <h1>Configjeux index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Critere</th>
                <th>Niveau</th>
                <th>Pourcentage</th>
                <th>Formule</th>
                <th>Coeftour</th>
                <th>Coefhistour</th>
                <th>Actif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for configjeux in configjeuxes %}
            <tr>
                <td>{{ configjeux.id }}</td>
                <td>{{ configjeux.critere }}</td>
                <td>{{ configjeux.niveau }}</td>
                <td>{{ configjeux.pourcentage }}</td>
                <td>{{ configjeux.formule }}</td>
                <td>{{ configjeux.coeftour }}</td>
                <td>{{ configjeux.coefhistour }}</td>
                <td>{{ configjeux.actif ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('configjeux_show', {'id': configjeux.id}) }}">show</a>
                    <a href="{{ path('configjeux_edit', {'id': configjeux.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('configjeux_new') }}">Create new</a>
{% endblock %}
